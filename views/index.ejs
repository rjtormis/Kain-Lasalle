    <center>
      <div class="login">
        <form id="loginForm" action="" method="POST">
          <h1>Login</h1>
          <div class="input-box">
            <input type="email" placeholder="Email" required id="email" />
          </div>

          <div class="input-box">
            <input type="password" placeholder="Password" required id="password" />
          </div>

          <div class="input-box">
            <label for="rememberMe"
              >Remember me
              <input type="checkbox" id="rememberMe" />
            </label>
          </div>

          <!-- Change the type to "button" to prevent form submission -->
          <button type="button" id="login" class="btnLogin">Login</button>

          <div class="forgot-password">
            <a href="#" style="color: white">Forgot password?</a>
          </div>
        </form>

        <div class="cusreglink">
          <p>Don't have an account? <a href="register.html">Register</a></p>
        </div>

        <div class="adminlogin">
          <p>Are you an admin? <a href="adlogin.html">Admin Login</a></p>
        </div>
      </div>
    </center>

    <!-- Add the script to redirect on button click -->
    <script>
      //

      document.getElementById("loginForm").addEventListener("submit", function (event) {
        // Prevent the default form submission
        event.preventDefault();

        // Get the email and password values
        const email = document.getElementById("email").value;
        const password = document.getElementById("password").value;

        // Use fetch API to send data to the server
        fetch("/login", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            username: email,
            password: password,
          }),
        })
          .then((response) => {
            if (!response.ok) {
              throw new Error(response.statusText);
            }
            return response.json(); // Parse response as JSON
          })
          .then((data) => {
            // Check if the login is successful
            if (data.success) {
              // Redirect to homepage.html
              window.location.href = "homepage.html";
            } else {
              // Display warning if no existing user is found
              alert("No existing user found!");
            }
          })
          .catch((error) => {
            console.error("Error during login:", error);
          });
      });
    </script>
